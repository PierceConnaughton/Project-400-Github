<MenuScreen>:
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        MDToolbar:
            title: "Tweet Generator"
            right_action_items: [["twitter", lambda x: app.navigation_draw()]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint: (0.6,1)
            pos_hint: {'center_x':0.5, 'center_y':0.5}

            MDTextField:
                id: tweet
                hint_text: "Input Start of Tweet eg: 'Thanks'"
                helper_text: "Less than 15 characters"
                helper_text_mode: "persistent"
                max_text_length: 15
                
                

        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {'center_x':0.2, 'center_y':0.5}
            size_hint: (None,1)
            spacing: 20
            MDRectangleFlatIconButton:  
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon:'send'
                text: 'Submit'
                on_press:
                    root.pressed()
                    
                    
                    
            MDRectangleFlatIconButton:
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon: 'redo'
                text: 'Reset'
                on_press:
                    root.resetScreen()

        
            MDRectangleFlatIconButton:
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon: 'exit-run'
                text: '[font=Times]Exit[/font]'
                md_bg_color: app.theme_cls.primary_dark
                on_press:
                    app.stop()

        

<TweetScreen>:
    

    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Tweet Generator"
            right_action_items: [["twitter", lambda x: app.navigation_draw()]]
            
        
        BoxLayout:
            orientation: "vertical"     
            padding: "100dp", 0, 0, 0
            
            
            MDLabel:
                markup: True
                text: "[i][b]Generated Tweet[/b][/i]"
                pos_hint: {'center_x':0.5}
                
    
            MDLabel:
                markup: True
                id: tweet_generated
                pos_hint: {'center_x':0.5}
                text: "No Tweet Generated"
                

        MDBoxLayout:
            orientation: "vertical"
            padding: "100dp", 0, 0, 0
            spacing: 1

            MDLabel:
                markup: True
                text: "[i][b]Tweet Sentiment[/b][/i]"
                pos_hint: {'center_x':0.5}
    
            MDLabel:
                markup: True
                id: tweet_sentiment
                text: "No Sentiment"
                pos_hint: {'center_x':0.5}


        MDBoxLayout:
            orientation: "horizontal"
            spacing: 20 
            pos_hint: {'center_x':0.2, 'center_y':0.5}
            size_hint: (None,1)

            MDRectangleFlatIconButton:  
                icon:'send'
                markup: True
                pos_hint: {'center_x':0.3, 'center_y':0.2}
                text: 'Post'
                on_press:
                    root.postTweet()
                    
            MDRectangleFlatIconButton:  
                icon:'keyboard-backspace'
                markup: True
                pos_hint: {'center_x':0.5, 'center_y':0.2}
                text: 'Go Back'
                on_press:
                    root.goBackScreen()

        
            MDRectangleFlatIconButton:  
                icon:'exit-run'
                markup: True
                pos_hint: {'center_x':0.7, 'center_y':0.2}
                text: '[font=Times]Exit[/font]'
                md_bg_color: app.theme_cls.primary_dark
                on_press:
                    app.stop() 

<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 0, 0, 0, 0
        
        MDToolbar:
            title: "Tweet Generator"
            right_action_items: [["twitter", lambda x: app.navigation_draw()]]
        
        
        MDBoxLayout:
            orientation: "vertical"
            padding: "100dp", 0, 0, 0
            spacing: 1

            MDCard: 
                size_hint: None, None
                size: 300,300
                pos_hint: {"center_x":0.5,"center_y":0.5}

                MDBoxLayout:
                    orientation: "vertical"

                    MDTextField:
                        id: loginEmail
                        hint_text: "email"
                        pos_hint: {'center_x':0.5, 'center_y':0.8}

                    MDTextField:
                        password: True
                        id: loginPassword
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        hint_text: "password"

                    MDLabel:
                        pos_hint: {'center_x':0.5, 'center_y':0.3}
                        id: loginMessage
                        color: (1,0,0,1)

                    MDRaisedButton:
                        pos_hint: {'center_x':0.5, 'center_y':0.2}
                        text: 'Login'
                        on_press:
                            root.SignUp(loginEmail.text, loginPassword.text)