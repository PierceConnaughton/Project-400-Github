                    MDTextFieldRound:
                        size_hint: (0.8,0.5)
                        icon_left: "email"
                        id: signupEmail
                        hint_text: "E-mail"
                        pos_hint: {'center_x':0.5, 'center_y':0.9}


                    MDTextFieldRound:
                        size_hint: (0.8,0.5)
                        icon_left: "key"
                        password: True
                        id: signupPassword
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        hint_text: "Password"


                    MDLabel:
                        pos_hint: {'center_x':0.8}
                        id: signupMessage
                        color: (1,0,0,1)

                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: 100 
                        pos_hint: {'center_x':0.2, 'center_y':0.5}
                        size_hint: (None,1)

                        MDRectangleFlatIconButton:  
                            icon:'login'
