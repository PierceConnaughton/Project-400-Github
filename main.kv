<MenuScreen>:
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        MDToolbar:
            title: "DeepSocial"
            right_action_items: [["twitter", lambda x: app.navigation_draw()]]
            left_action_items: [["logout", lambda x: root.logout()]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint: (0.6,1)
            pos_hint: {'center_x':0.5, 'center_y':0.5}

            MDTextField:
                id: tweet
                hint_text: "Input Start of Tweet eg: 'Thanks'"
                helper_text: "Less than 15 characters"
                helper_text_mode: "persistent"
                max_text_length: 15

        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {'center_x':0.2, 'center_y':0.5}
            size_hint: (None,1)
            spacing: 20

            MDRectangleFlatIconButton:  
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon:'send'
                text: 'Submit'
                on_press:
                    root.pressed()   
                    
            MDRectangleFlatIconButton:
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon: 'redo'
                text: 'Reset'
                on_press:
                    root.resetScreen()

        
            MDRectangleFlatIconButton:
                pos_hint: {'center_x':0.4, 'center_y':0.2}
                icon: 'exit-run'
                text: '[font=Times]Exit[/font]'
                md_bg_color: app.theme_cls.primary_dark
                on_press:
                    app.stop()


