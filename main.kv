<MyGrid>:
    tweet: tweet
    cols: 1 
    rows: 4
    
    
    MDFloatLayout:
        MDTextField:
            id: tweet
            hint_text: "Input Start of Tweet eg: 'Thanks'"
            helper_text: "Must be less than 15 characters"
            helper_text_mode: "persistent"
            max_text_length: 15
            pos_hint: {'center_x':0.3, 'center_y':0.5}
            size_hint: (0.5,None)
        
    
        MDRaisedButton:
            text:"Submit"
            pos_hint: {'x': 0.6, 'center_y': 0.5} 
            on_press: root.pressed()

    MDFloatLayout:
        MDLabel:
            text: "Generated Tweet: "
            pos_hint: {'center_x':0.6, 'center_y':0.5}
    
        MDLabel:
            id: tweet_generated
            text: "No Tweet Generated"
            pos_hint: {'x': 0.6, 'center_y': 0.5} 

    MDFloatLayout:
        MDLabel:
            text: "Tweet Sentiment: "
            pos_hint: {'center_x':0.6, 'center_y':0.5}
    
        MDLabel:
            id: tweet_sentiment
            text: "No Sentiment"
            pos_hint: {'x': 0.6, 'center_y': 0.5} 
    
    MDFloatLayout:
        MDRaisedButton:
            text:"Post Tweet"
            pos_hint: {'center_x':0.2, 'center_y':0.2}
            on_press: root.PostTweet()
    
        MDRaisedButton:
            text:"Reset"
            halign: "left"
            valign: "middle"
            pos_hint: {'x': 0.6, 'center_y': 0.2} 
            on_press: root.resetScreen()

   


                
        