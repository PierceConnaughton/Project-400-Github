<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 0, 0, 0, 0
        
        MDToolbar:
            title: "DeepSocial"
            right_action_items: [["twitter", lambda x: app.navigation_draw()]]
        
        
        MDBoxLayout:
            orientation: "vertical"
            padding: 0, 0, 0, "100dp"
            spacing: 1

            MDCard: 
                size_hint: None, None
                size: 350,350
                pos_hint: {"center_x":0.5,"center_y":0.5}

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 20
                    padding: 0, "10dp", 0, "10dp"

                    MDLabel:
                        markup: True
                        text: "[i][b]Firebase Login[/b][/i]"
                        pos_hint: {'center_x':0.85}

                    MDTextFieldRound:
                        size_hint: (0.8,0.4)
                        icon_left: "email"
                        id: loginEmail
                        hint_text: "E-mail"
                        pos_hint: {'center_x':0.5, 'center_y':0.8}

                    MDTextFieldRound:
                        size_hint: (0.8,0.4)
                        icon_left: "key"
                        password: True
                        id: loginPassword
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        hint_text: "Password"

                    MDLabel:
                        pos_hint: {'center_x':0.5, 'center_y':0.4}
                        id: loginMessage
                        color: (1,0,0,1)
                        pos_hint: {'center_x':0.8}
                    
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: 100
                        pos_hint: {'center_x':0.2, 'center_y':0.5}
                        size_hint: (None,1)

                        MDRectangleFlatIconButton:  
                            icon:'login'
                            markup: True
                            pos_hint: {'center_x':0.3, 'center_y':0.2}
                            text: 'Login'
                            on_press:
                                root.SignIn(loginEmail.text, loginPassword.text)

                        MDRectangleFlatIconButton:  
                            icon:'logout'
                            markup: True
                            pos_hint: {'center_x':0.3, 'center_y':0.2}
                            text: 'Try Signup'
                            on_press:
                                root.SignUp()


<SignupScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 0, 0, 0, 0
        
        MDToolbar:
            title: "DeepSocial"
